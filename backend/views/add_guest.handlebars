<div class="col-md-9">
    <div class="container-fluid">
        <div class="row">
            <form action="/insert_guest" method="post">
                <div class="form-group row">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Enter guest name" name="guest_name" required>
                    </div>

                    <div class="col-md-4">
                        <input type="number" class="form-control" placeholder="Enter guest age" name="guest_age" required>
                    </div>

                    <div class="col-md-4">
                        <input type="number" class="form-control" placeholder="Enter guest phone" name="guest_phone" required>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <div class="col-md-6">
                        <select class="form-select" name="guest_room_id">
                            <option value="">Select Room</option>
                            {{#each rooms}}
                            <option value="{{this._id}}">{{this.room_no}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <div class="col-md-4"></div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">Add Guest</button>
                    </div>
                    <div class="col-md-1">
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>